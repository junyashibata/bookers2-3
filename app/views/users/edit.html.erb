<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>User info</h1>
      <%=form_with model:@user do |f| %>
      <p>name</p>
      <%= f.text_area :name %>
      <p>image</p>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      <p>Introduction</p>
      <%= f.text_area :introduction %>
      <%= f.submit 'Update User' %>
      <% end %>
    </div>
    
  </div>
</div>