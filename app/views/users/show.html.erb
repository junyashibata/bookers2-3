<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
      <%= render 'books/list', book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <% @books.each do |book| %>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%= book.title %></td>
            <td><%= book.opinion %></td>
          </tr>
        </tbody>
        <% end %>
      </table>