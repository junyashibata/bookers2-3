<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'list', book: @book %>
    </div>
    <div class="col-lg-9">
      <h1>Books</h1>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= image_tag book.user.get_profile_image(100,100) %>
            </td>
            <td>
              <p><%= book.title %></p>
            </td>
            <td>
              <p><%= book.opinion %></p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


